rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin of a list
    function isListAdmin(listId, userId) {
      return get(/databases/$(database)/documents/routine_lists/$(listId)).data.admins.hasAny([userId]);
    }

    // Rules for the 'routine_lists' collection
    match /routine_lists/{listId} {

      // READ: Allow read access only to admins of the list.
      allow read: if request.auth != null && isListAdmin(listId, request.auth.uid);

      // CREATE: Any authenticated user can create a new list.
      // The function logic ensures the creator becomes the first admin.
      allow create: if request.auth != null;

      // UPDATE, DELETE: Allow write access only to admins of the list.
      allow write: if request.auth != null && isListAdmin(listId, request.auth.uid);
    }
  }
}